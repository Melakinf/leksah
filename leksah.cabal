    if os(windows)
        extra-libraries:
            kernel32
        build-depends:
            Win32 >=2.2.0.0 && <2.7
    else
        build-depends:
            unix >=2.3.1.0 && <2.8

    if os(osx)
        build-depends:
            gi-gtkosxapplication >=2.0.2 && <2.1

    if os(linux)
        build-depends:
            gi-webkit2 >=4.0.6 && <4.1

    if flag(yi)
        cpp-options: -DLEKSAH_WITH_YI
        build-depends:
            yi >=0.12.4 && <0.13,
            yi-language >=0.2.0 && <0.3,
            yi-rope >=0.7.0.1 && <0.8

    if (flag(yi) && flag(dyre))
        cpp-options: -DLEKSAH_WITH_YI_DYRE
        build-depends:
            dyre >=0.8.3 && <0.9

    if flag(codemirror)
        cpp-options: -DLEKSAH_WITH_CODE_MIRROR

    if (flag(loc) && os(linux))
        cpp-options: -DLOCALIZATION
        build-depends:
            hgettext -any,
            setlocale -any

    if flag(network-uri)
        build-depends:
            network-uri >=2.6 && <2.7,
            network >=2.6 && <2.7
    else
        build-depends:
            network >=2.2 && <2.6

    if flag(check-gtk-version)

        if flag(gtk-320)
            cpp-options: -DMIN_VERSION_GTK_3_20
            pkgconfig-depends: gtk+-3.0 >=3.20
    else
        cpp-options: -DMIN_VERSION_GTK_3_20

    if !impl(ghcjs -any)
        build-depends:
            ghc >=6.10.1 && <8.5,
            haskell-src-exts >=1.13.5 && <1.21,
            leksah-server >=0.17.0.0 && <0.18

    if flag(hare)
        build-depends:
            HaRe >=0.8.4.1 && <0.9,
            ghc-mod-core >=5.9.0.0 && <5.10,
            monad-control >=1.0.2.3 && <1.1

executable leksah
    main-is: Main.hs
    hs-source-dirs: main
    default-language: Haskell2010
    ghc-options: -rtsopts -fwarn-missing-fields
                 -fwarn-incomplete-patterns -ferror-spans
    build-depends:
        leksah -any,
        base >=4.0.0.0 && <4.12,
        gi-gtk-hs >=0.3.1.0 && <0.4,
        stm >=2.4.4 && <2.6

    if os(windows)
        extra-libraries:
            kernel32
        build-depends:
            Win32 >=2.2.0.0 && <2.7

    if flag(yi)
        cpp-options: -DLEKSAH_WITH_YI

    if (flag(yi) && flag(dyre))
        cpp-options: -DLEKSAH_WITH_DYRE

    if flag(threaded)
        ghc-options: -threaded

    if (os(linux) && flag(loc))
        cpp-options: -DLOCALIZATION
        build-depends:
            hgettext -any,
            setlocale -any

    if os(osx)
        ghc-options: -optl-headerpad_max_install_names

    if !impl(ghcjs -any)
        build-depends:
            leksah-server -any

